[defaults]
callback_whitelist = <%= @callback %>
local_tmp = <%= @working_dir %>
host_key_checking = <%= @host_key_checking ? 'True' : 'False' %>
stdout_callback = <%= @stdout_callback %>
roles_path = <%= @roles_path.join(':') %>

[callback_foreman]
url = <%= @foreman_url %>
ssl_cert = <%= @foreman_ssl_cert %>
ssl_key = <%= @foreman_ssl_key %>
verify_certs = <%= @foreman_ssl_ca %>

[ssh_connection]
ssh_args = <%= @ssh_args %>
